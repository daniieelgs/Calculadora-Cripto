<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="numberButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">?attr/itemTextColor</item>
        <item name="android:textSize">50dp</item>
        <item name="android:backgroundTint">?attr/backgroundTint</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:onClick">numberClick</item>
    </style>

    <style name="screenResult"  parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">0dp</item>
        <!--<item name="android:layout_height">100sp</item>-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">0</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">90sp</item>
        <item name="android:inputType">textMultiLine</item>
<!--        <item name="android:autoSizeMaxTextSize">100sp</item>-->
<!--        <item name="android:autoSizeMinTextSize">1dp</item>-->
<!--        <item name="android:autoSizeStepGranularity">2sp</item>-->
<!--        <item name="android:autoSizeTextType">uniform</item>-->

<!--        <item name="android:textSize">80dp</item>-->
    </style>

    <style name="moneyButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:backgroundTint">@color/buttons_money_bg</item>
        <item name="android:textColor">@color/buttons_money_tx</item>
        <item name="android:textSize">20dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="numberButton.buttonsDelete">
        <item name="android:backgroundTint">@color/light_green</item>
        <item name="android:onClick">deleteClick</item>
    </style>

    <style name="moneyButtons.addMoneyButton.addMoneyButtonLand">
        <item name="cornerRadius">1000dp</item>
        <item name="android:backgroundTint">@color/gray_dark</item>
        <item name="icon">@drawable/ic_add_64</item>
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">textTop</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:onClick">addMoney</item>
    </style>


</resources>